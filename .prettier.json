{
  "singleQuote": true, // кавычки
  "trailingComma": "all", // Добавлять запятую в конце всех объектов и массивов (включая последнюю пару или элемент)
  "tabWidth": 2, // Ширина отступа табуляции 2 пробела
  "useTabs": false, // Вместо табуляций для отступов использовать пробелы.
  "printWidth": 120, // Максимальная длина строки кода перед переносом на следующую строку
  "semi": true // Добавлять точку с запятой в конце каждого выражения.
}